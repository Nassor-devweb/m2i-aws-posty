doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title
      block title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    link(rel="stylesheet" href="/stylesheets/style.css")
    block styles
  body
    .container
      block header
        header.d-flex.justify-content-between.align-items-center.py-3
          a(href="/")
            h1.display-4 Posty
          div
            span.me-2 user@account.com
            a(href="/" class="mx-2") home
            a(href="#" class="btn btn-outline-secondary btn-sm") logout
      
      block search
        form.mb-4(method="get" action="/search")
          .input-group
            input(type="text" name="keyword" class="form-control" placeholder="Search..." value=  search || "")
            button.btn.btn-outline-secondary(type="submit") search

      block content

      .search-navigation.float-end
        if previous
          a(href= previous) << previous page
          span.mx-3

        if next
          a(href= next) next page >>
      
      block footer
        footer.row.row-cols-1.row-cols-sm-2.row-cols-md-5.py-5.my-5.border-top
          .col.mb-3
            h5 Posty
            p.text-muted Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
          .col.mb-3
          .col.mb-3
            h5 Footer links
            ul.nav.flex-column
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href="#") Footer link 1
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href="#") Footer link 2
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href="#") Footer link 3
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href="#") Footer link 4
          .col.mb-3
            h5 Footer links
            ul.nav.flex-column
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href="#") Footer link 1
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href="#") Footer link 2
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href="#") Footer link 3
              li.nav-item.mb-2
                a.nav-link.p-0.text-muted(href="#") Footer link 4
        .text-center.py-3.border-top
